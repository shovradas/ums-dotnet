@model Ums.Entities.Student

@{
    ViewBag.SubTitle = "Delete";
}

@section PageNav
{
    <nav class="navbar navbar-expand-sm bg-primary">
        <a href="@Url.Action("Index")" class="btn btn-primary btn-icon-split">
            <span class="icon text-white-50">
                <i class="fas fa-list"></i>
            </span>
            <span class="text">View List</span>
        </a>
        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary btn-icon-split">
            <span class="icon text-white">
                <i class="fas fa-edit"></i>
            </span>
            <span class="text">Edit</span>
        </a>
    </nav>

    <br />

    @Html.Raw(ViewBag.AlertMessage)

    <div class="alert alert-warning">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>Warning!</strong> Are you sure you want to delete? <a href="@Url.Action("Index")" class="alert-link">Take me back</a>
    </div>
}

    <dl class="dl-horizontal">
        <dt>
            Id
        </dt>

        <dd>
            @Model.FormattedId
        </dd>

        <dt>
            Name
        </dt>

        <dd>
            @Model.Name
        </dd>

        <dt>
            User Name
        </dt>

        <dd>
            @Model.UserName
        </dd>

        <dt>
            Cgpa
        </dt>

        <dd>
            @Model.Cgpa
        </dd>

        <dt>
            Email
        </dt>

        <dd>
            @Model.Email
        </dd>

        <dt>
            Department
        </dt>

        <dd>
            <a href="@Url.Action("Details", "Department", new { id = Model.Department.Id })" class="btn-link" title="Department">
                @Model.Department.Name
            </a>
        </dd>
    </dl>
<hr/>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <div>
            <input type="submit" value="Delete" class="btn btn-danger" />
        </div>
    </div>
}