@model Ums.Entities.Student

@{
    ViewBag.SubTitle = "Details";
}

@section PageNav
{
<nav class="navbar navbar-expand-sm bg-primary">
    <a href="@Url.Action("Index")" class="btn btn-primary btn-icon-split">
        <span class="icon text-white-50">
            <i class="fas fa-list"></i>
        </span>
        <span class="text">View List</span>
    </a>
    <a href="@Url.Action("Create")" class="btn btn-primary btn-icon-split">
        <span class="icon text-white-50">
            <i class="fas fa-plus"></i>
        </span>
        <span class="text">Create New</span>
    </a>
    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary btn-icon-split">
        <span class="icon text-white">
            <i class="fas fa-edit"></i>
        </span>
        <span class="text">Edit</span>
    </a>
    <a href="@Url.Action("Delete", new { id = Model.Id })" class="btn btn-primary btn-icon-split">
        <span class="icon text-danger">
            <i class="fas fa-trash"></i>
        </span>
        <span class="text">Delete</span>
    </a>
</nav>
    <br />
    @Html.Raw(TempData["AlertMessage"])
}

    <dl class="dl-horizontal">
        <dt>
            Id
        </dt>

        <dd>
            @Model.FormattedId
        </dd>

        <dt>
            User Name
        </dt>

        <dd>
            @Model.UserName
        </dd>

        <dt>
            Name
        </dt>

        <dd>
            @Model.Name
        </dd>

        <dt>
            Cgpa
        </dt>

        <dd>
            @Model.Cgpa
        </dd>

        <dt>
            Email
        </dt>

        <dd>
            @Model.Email
        </dd>

        <dt>
            Department
        </dt>

        <dd>
            <a href="@Url.Action("Details", "Department", new { id = Model.Department.Id })" class="btn-link" title="Department">
                @Model.Department.Name
            </a>
        </dd>

        <dt>
            Status
        </dt>

        <dd>
            @Html.Raw((Model.IsActive ? "<span class='badge badge-success'>Active</span>" : "<span class='badge badge-danger'>Locked</span>"))
        </dd>
    </dl>