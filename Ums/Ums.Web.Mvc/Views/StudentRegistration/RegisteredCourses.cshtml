@model IEnumerable<Registration>
@{
    ViewBag.Title = "Registered Courses";
    Layout = "~/Views/Shared/_LayoutPrivateList.cshtml";
}

@section PageNav
{
    <nav class="navbar navbar-expand-sm bg-primary">
        <a href="@Url.Action("Index", "Dashboard")" class="btn btn-primary btn-icon-split">
            <span class="icon text-white-50">
                <i class="fas fa-arrow-left"></i>
            </span>
            <span class="text">Dashboard</span>
        </a>
    </nav>
    <br />
}

<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>
                Course
            </th>
            <th>
                Section
            </th>
            <th>
                Credit
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <strong>@item.Section.Course.Code</strong>: @item.Section.Course.Name
                </td>
                <td>
                    @item.Section.Name
                </td>
                <td>
                    @item.Section.Course.Credit
                </td>
            </tr>
        }
    </tbody>
</table>

@section PageLevelScripts{
    <script>
        // Call the dataTables jQuery plugin
        $(document).ready(function () {
            $('#dataTable').DataTable();
        });
    </script>
}